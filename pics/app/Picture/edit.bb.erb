<div id="pageTitle">
		<h1>Edit <%= @picture.caption%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @picture.object %>
    <%= link_to "Delete", :action => :delete, :id => @picture.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @picture.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Caption: </td>
              			<td class="itemValue"><input type="text" name="picture[caption]" value="<%= @picture.caption %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
